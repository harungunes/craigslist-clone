<!DOCTYPE html>
<html>
  <head>
    <title>CraigslistClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="header">
      <%= render 'layouts/breadcrumb_nav' %>
    </div>
    <p class="notice"><%= notice %></p>
    <div class="container">
      <div class="row">
        <div class="col-3">
          <p><strong><%= link_to "Craig's List clone", root_path %></strong></p>

          <%= link_to 'New post', new_post_path if controller.controller_name == 'public' %><br />
          <%= link_to 'My account', new_account_session_path unless account_signed_in? %>
          <%= render 'categories/category_sidebar' if controller.controller_name == 'categories' %>

          <% if is_home? %>
          <div class="nav-pages">
            <p><%= link_to 'help, faqs, abuse, legal', faqs_path %></p>
            <p><%= link_to 'avoid scams and fraud', scams_path %></p>
            <p><%= link_to 'personal safety tips', safety_path %></p>
            <p><%= link_to 'terms of use', terms_path %></p>
          </div>
          <% end %>
        </div>
        <div class="col-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
