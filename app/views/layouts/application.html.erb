<!DOCTYPE html>
<html>
  <head>
    <title>CraigslistClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="main">
      <div class="main-left">
      <p>Craig's List clone</p>
      <%= render 'categories/category_sidebar' if controller.controller_name == 'categories' %>
      <%= link_to 'New post', new_post_path if controller.controller_name == 'public' %>
      </div>
      <div class="main-right">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
